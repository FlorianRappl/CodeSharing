<Window x:Class="CodeSharing.App02.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CodeSharing.App02"
        Title="Beispiel 02 - Konditionale" Height="350" Width="525">
    <Window.DataContext>
        <local:SampleViewModel />
    </Window.DataContext>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                 Margin="20"
                 FontSize="32"
                 TextAlignment="Center"
                 Grid.Row="0" />

        <TextBlock Text="{Binding Welcome}"
                   Margin="20"
                   FontSize="32"
                   TextAlignment="Center"
                   Grid.Row="1" />

        <TextBlock Text="{Binding Greetings}"
                   Margin="20"
                   FontSize="32"
                   TextAlignment="Center"
                   Grid.Row="2" />
    </Grid>
</Window>
