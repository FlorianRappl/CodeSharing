<Window x:Class="CodeSharing.App01.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beispiel 01 - PCL" Height="350" Width="525">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox x:Name="name"
                 Margin="20"
                 TextChanged="name_TextChanged"
                 FontSize="32"
                 TextAlignment="Center"
                 Grid.Row="0" />

        <TextBlock x:Name="welcome"
                   Margin="20"
                   FontSize="32"
                   TextAlignment="Center"
                   Grid.Row="1" />

        <TextBlock x:Name="greeting"
                   Margin="20"
                   FontSize="32"
                   TextAlignment="Center"
                   Grid.Row="2" />
    </Grid>
</Window>
